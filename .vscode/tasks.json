{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "antlr generate",
            "type": "shell",
            "command": "antlr4 -Dlanguage=Cpp -visitor -no-listener *.g4 ",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "g++ -o GoGo -std=c++0x -I/usr/include/antlr4-runtime -L/usr/lib -lantlr4-runtime *.cpp",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}