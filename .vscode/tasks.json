{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "antlr generate",
            "type": "shell",
            "command": "antlr4 -Dlanguage=Cpp -visitor -no-listener *.g4 ;
            echo -e \"#include \"wci/intermediate/TypeSpec.h\"\n
            using namespace wci::intermediate\;\n$(cat GoGoParser.h)\" > GoGoParser.h",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "compile",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
} 